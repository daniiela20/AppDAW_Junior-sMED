<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.utng.juniorsmed.appdaw.activity.FirstTemActivity"
    android:background="@drawable/tfd"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_unit1"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/button_tem"
                android:onClick="ShowPopup"
                android:text="@string/title_unit_one"
                android:fontFamily="@font/tp_word"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_unit2"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="140dp"
                android:layout_below="@+id/btn_unit1"
                android:background="@drawable/button_tem"
                android:onClick="ShowPopupII"
                android:text="@string/title_unit_two"
                android:fontFamily="@font/tp_word"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_unit3"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="90dp"
                android:layout_below="@+id/btn_unit2"
                android:background="@drawable/button_tem"
                android:onClick="ShowPopupIII"
                android:text="@string/title_unit_three"
                android:fontFamily="@font/tp_word"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_unit4"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="165dp"
                android:layout_below="@+id/btn_unit3"
                android:background="@drawable/button_tem"
                android:onClick="ShowPopupIV"
                android:text="@string/title_unit_four"
                android:fontFamily="@font/tp_word"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_unit5"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/button_tem"
                android:onClick="ShowPopupV"
                android:text="@string/title_unit_five"
                android:fontFamily="@font/tp_word"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout >
