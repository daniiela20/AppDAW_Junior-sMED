<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.utng.juniorsmed.appdaw.activity.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/header">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/perfilImageView"
            android:src="@drawable/ic_user"
            android:layout_marginTop="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/nombrePerfilTextView"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/tp_word"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textColor="@color/white">

        </TextView>
        <TextView
            android:id="@+id/correoPerfilTextView"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/tp_word"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electrÃ³nico"
            android:textColor="@color/white">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    </LinearLayout>

</LinearLayout>
