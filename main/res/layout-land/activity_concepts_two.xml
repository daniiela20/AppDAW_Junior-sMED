<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:id="@+id/contenedor_fragments"
        android:layout_width="wrap_content"
        android:layout_weight="70"
        android:layout_height="match_parent"
        ></FrameLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="30">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF8332"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_one"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#FF9B00"
                android:onClick="onClick"
                android:text="Directorio" />


            <Button
                android:id="@+id/btn_two"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#FF9B00"
                android:onClick="onClick"
                android:text="Estructura" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#FF9B00"
                android:onClick="onClick"
                android:text="S. de organización" />

            <Button
                android:id="@+id/btn_four"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#FF9B00"
                android:onClick="onClick"
                android:text="Etiquetado" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#FF9B00"
                android:onClick="onClick"
                android:text="Mapas de web" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#FF9B00"
                android:onClick="onClick"
                android:text="Índices" />



        </LinearLayout>

    </ScrollView>

</LinearLayout>